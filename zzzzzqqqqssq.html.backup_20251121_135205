    <script>
        // --- CONFIGURATION ---
        const PX_PER_M = 40.0; 
        const AP_OFFSET = 100; 
        const SUPPORT_LEN_PX = 180; 

        function mapX_CAD(metersFromAP) {
            if (metersFromAP === null) return 1500; 
            return AP_OFFSET + (metersFromAP * 15.0); 
        }

        // --- DATA ---
        const stages = [
            { 
                id: "st1", label: "Stage 1: Start", day: "D-1",
                tr1: null, tr2: null, 
                dfwd: 2.00, daft: 2.00, bal: 0, tug: false,
                desc: "D-1: Arrival. Quay Level Aligned with Deck." 
            },
            { 
                id: "st2", label: "Stage 2: TR1 Entry", day: "D-1",
                tr1: 70.0, tr2: null, 
                dfwd: 2.30, daft: 1.70, bal: 0, tug: false,
                desc: "D-1: TR1 on Ramp. Smooth Entry." 
            },
            { 
                id: "st3", label: "Stage 3: TR1 Mid", day: "D-1",
                tr1: 45.0, tr2: null, 
                dfwd: 2.20, daft: 1.80, bal: 0, tug: false,
                desc: "D-1: TR1 Moving Aft." 
            },
            { 
                id: "st4", label: "Stage 4: TR1 Secured", day: "D-1",
                tr1: 22.35, tr2: null, 
                dfwd: 2.00, daft: 2.00, bal: 0, tug: false,
                desc: "D-1: TR1 Secured. Even Keel." 
            },
            { 
                id: "st5", label: "Stage 5: Pre-Ballast", day: "D-1",
                tr1: 22.35, tr2: null, 
                dfwd: 0.80, daft: 3.20, bal: 250, tug: false,
                desc: "⚠️ D-1 BALLASTING: High Stern Draft (3.2m) Prepared." 
            },
            { 
                id: "st6a", label: "Stage 6A: TR2 Entry", day: "D-Day",
                tr1: 22.35, tr2: 65.0, 
                dfwd: 2.50, daft: 1.50, bal: 250, tug: true,
                desc: "D-Day: TR2 Enters. Countering moment." 
            },
            { 
                id: "st6c", label: "Stage 6C: Final Stow", day: "D-Day",
                tr1: 22.35, tr2: 39.0, 
                dfwd: 1.50, daft: 2.50, bal: 250, tug: true,
                desc: "D-Day: Final Stowage." 
            },
            { 
                id: "st7", label: "Stage 7: Departure", day: "D-Day",
                tr1: 22.35, tr2: 39.0, 
                dfwd: 2.00, daft: 2.00, bal: 250, tug: true,
                desc: "Departure." 
            }
        ];

        const els = {
            ship: document.getElementById('ship-group'),
            tr1: document.getElementById('tr1'),
            tr2: document.getElementById('tr2'),
            tug: document.getElementById('tug-assist'),
            lsLine: document.getElementById('ls-line'),
            lsP1: document.getElementById('ls-p1'),
            lsP2: document.getElementById('ls-p2'),
            lsGroup: document.getElementById('linkspan-dynamic'),
            ballastVis: document.getElementById('ballast-visual'),
            ballastTxt: document.getElementById('ballast-text'),
            dfwd: document.getElementById('dfwd-display'),
            daft: document.getElementById('daft-display'),
            trim: document.getElementById('trim-display'),
            trimBadge: document.getElementById('trim-badge'),
            desc: document.getElementById('desc-display'),
            ballast: document.getElementById('ballast-val'),
            tugStatus: document.getElementById('tug-status'),
            list: document.getElementById('button-list'),
            warning: document.getElementById('warning-box'),
            wText: document.getElementById('warning-text'),
            dayInd: document.getElementById('day-indicator'),
            gapDims: document.getElementById('cad-gap-dims'),
            dimLine: document.getElementById('dim-line'),
            dimText: document.getElementById('dim-text'),
            dimExt1: document.getElementById('dim-ext1'),
            dimExt2: document.getElementById('dim-ext2')
        };

        // FIXED PHYSICS CONSTANTS
        const PHYSICS = {
            waterY: 400, 
            pxScale: 40, 
            hullDepthM: 3.65, 
            shipCenterX: 580, 
            shipCenterY: 100, 
            bowXLocal: 1060, 
            quayX: 1250,
            quayY: 330 // FIXED: Matched to Ship Deck Level
        };

        let currentStageIdx = 0;
        let autoPlayInterval = null;

        function updateLinkspan(targetY, angle) {
            const rad = angle * (Math.PI / 180);
            const cos = Math.cos(rad);
            const sin = Math.sin(rad);
            const dx = PHYSICS.bowXLocal - PHYSICS.shipCenterX;
            const dy = 0;
            const rx = dx * cos - dy * sin;
            const ry = dx * sin + dy * cos;
            const worldBowX = PHYSICS.shipCenterX + rx;
            const worldBowY = PHYSICS.shipCenterY + ry + targetY;

            els.lsP1.setAttribute('cx', worldBowX);
            els.lsP1.setAttribute('cy', worldBowY);
            els.lsLine.setAttribute('x1', worldBowX);
            els.lsLine.setAttribute('y1', worldBowY);
            els.lsLine.setAttribute('x2', PHYSICS.quayX);
            els.lsLine.setAttribute('y2', PHYSICS.quayY);
            els.lsP2.setAttribute('cx', PHYSICS.quayX);
            els.lsP2.setAttribute('cy', PHYSICS.quayY);
        }

        function setStage(index) {
            Array.from(els.list.children).forEach((b, i) => {
                if (i === index) {
                    b.className = "w-full text-left px-4 py-3 rounded-xl text-xs font-bold bg-indigo-600 text-white shadow-lg shadow-indigo-900/40 ring-1 ring-indigo-400 transition-all scale-[1.02]";
                } else {
                    b.className = "w-full text-left px-4 py-3 rounded-xl text-xs font-medium bg-slate-800 text-slate-400 hover:bg-slate-700 hover:text-slate-200 transition-all";
                }
            });

            const d = stages[index];

            els.dayInd.innerText = d.day;
            if (d.day === "D-Day") {
                els.dayInd.className = "px-4 py-1.5 rounded-full bg-red-900/50 border border-red-500 text-xs font-bold text-red-200 tracking-widest transition-all animate-pulse";
            } else {
                els.dayInd.className = "px-4 py-1.5 rounded-full bg-blue-900/50 border border-blue-500 text-xs font-bold text-blue-200 tracking-widest transition-all";
            }

            if (d.tug) {
                els.tug.classList.remove('opacity-0');
                els.tugStatus.innerText = "ACTIVE";
                els.tugStatus.className = "text-emerald-400 font-bold animate-pulse";
            } else {
                els.tug.classList.add('opacity-0');
                els.tugStatus.innerText = "STANDBY";
                els.tugStatus.className = "text-slate-500";
            }

            const meanDraft = (d.dfwd + d.daft) / 2;
            const freeboard = PHYSICS.hullDepthM - meanDraft;
            
            // TargetY calculation logic
            // Water Y = 400.
            // Ship Pivot (CenterY) is approx Deck Level.
            // Deck should be (Freeboard * Scale) above Water.
            // So Pivot Y should contain an offset to align Hinge to Deck.
            // Ship Hinge Y (local) = 0. Pivot Y (local) = 100.
            // This means Hinge is 100px HIGHER than Pivot in local space? No, Hinge is at Y=0, Pivot at Y=100 (Pivot is below deck).
            // Wait, SVG Y grows downwards. Y=0 is Top (Deck). Y=100 is deeper (Pivot).
            // So Pivot is 100px BELOW Deck.
            // We want Deck (Y=0 local) to be at WaterY - (Freeboard*Scale).
            // Pivot (Y=100 local) should be at WaterY - (Freeboard*Scale) + 100.
            const targetY = PHYSICS.waterY - (freeboard * PHYSICS.pxScale) - 100; 

            const trimM = d.daft - d.dfwd;
            const angle = -trimM * 1.5; 

            els.ship.setAttribute('transform', `translate(0, ${targetY}) rotate(${angle}, ${PHYSICS.shipCenterX}, ${PHYSICS.shipCenterY})`);

            if (index === 7) els.lsGroup.style.opacity = "0";
            else {
                els.lsGroup.style.opacity = "1";
                updateLinkspan(targetY, angle);
            }

            els.tr1.style.opacity = d.tr1 === null ? "0" : "1";
            els.tr2.style.opacity = d.tr2 === null ? "0" : "1";
            els.tr1.setAttribute('transform', `translate(${mapX_CAD(d.tr1)}, 0)`);
            els.tr2.setAttribute('transform', `translate(${mapX_CAD(d.tr2)}, 0)`);

            if (d.bal > 0) {
                els.ballastVis.setAttribute('height', 45);
                els.ballastVis.setAttribute('y', 100);
                els.ballastTxt.setAttribute('opacity', 1);
            } else {
                els.ballastVis.setAttribute('height', 0);
                els.ballastVis.setAttribute('y', 145);
                els.ballastTxt.setAttribute('opacity', 0);
            }

            if (index === 6 || index === 7) {
                const tr1X = mapX_CAD(d.tr1);
                const tr2X = mapX_CAD(d.tr2);
                const len = 180; 
                const tr1End = tr1X + len/2;
                const tr2Start = tr2X - len/2;
                const mid = (tr1End + tr2Start) / 2;

                els.dimLine.setAttribute('x1', tr1End);
                els.dimLine.setAttribute('x2', tr2Start);
                els.dimText.setAttribute('x', mid);
                els.dimExt1.setAttribute('x1', tr1End);
                els.dimExt1.setAttribute('x2', tr1End);
                els.dimExt2.setAttribute('x1', tr2Start);
                els.dimExt2.setAttribute('x2', tr2Start);
                els.gapDims.classList.remove('opacity-0');
            } else {
                els.gapDims.classList.add('opacity-0');
            }

            els.dfwd.innerText = d.dfwd.toFixed(2);
            els.daft.innerText = d.daft.toFixed(2);
            els.trim.innerText = (trimM > 0 ? "+" : "") + Math.abs(trimM).toFixed(2) + " m";
            els.desc.innerText = d.desc;
            els.ballast.innerText = d.ballast.toLocaleString() + " t";

            if (Math.abs(trimM) < 0.1) {
                els.trimBadge.innerHTML = `<span class="w-1.5 h-1.5 rounded-full bg-emerald-400"></span> EVEN KEEL`;
                els.trimBadge.className = "inline-flex items-center gap-1.5 px-2 py-0.5 rounded bg-emerald-900/30 text-[10px] font-bold text-emerald-400 border border-emerald-800";
            } else {
                const label = trimM > 0 ? "TRIM AFT" : "TRIM FWD";
                const color = Math.abs(trimM) > 2 ? "red" : "yellow";
                els.trimBadge.innerHTML = `<span class="w-1.5 h-1.5 rounded-full bg-${color}-500 animate-pulse"></span> ${label}`;
                els.trimBadge.className = `inline-flex items-center gap-1.5 px-2 py-0.5 rounded bg-${color}-900/30 text-[10px] font-bold text-${color}-400 border border-${color}-800`;
            }

            if (d.daft > 3.0 || d.dfwd > 3.0) {
                els.warning.style.display = "flex";
                setTimeout(() => els.warning.style.opacity = "1", 50);
                const cause = d.daft > 3.0 ? "Deep Stern Draft" : "Deep Bow Draft";
                els.wText.innerText = `${cause} (${Math.max(d.daft, d.dfwd)}m)`;
            } else {
                els.warning.style.opacity = "0";
                setTimeout(() => els.warning.style.display = "none", 300);
            }
        }

        stages.forEach((s, i) => {
            const btn = document.createElement('button');
            btn.innerHTML = `<span>${s.label}</span>`;
            btn.onclick = () => {
                if(autoPlayInterval) toggleAutoPlay(); 
                setStage(i);
            };
            els.list.appendChild(btn);
        });
        
        function toggleAutoPlay() {
            const btn = document.getElementById('play-btn');
            if (autoPlayInterval) {
                clearInterval(autoPlayInterval);
                autoPlayInterval = null;
                btn.innerHTML = "AUTO PLAY";
                btn.classList.remove('bg-red-600', 'border-red-500');
                btn.classList.add('bg-emerald-600', 'border-emerald-500');
            } else {
                let nextIdx = currentStageIdx;
                autoPlayInterval = setInterval(() => {
                    nextIdx = (nextIdx + 1) % stages.length;
                    setStage(nextIdx);
                }, 3000); 
                btn.innerHTML = "STOP";
                btn.classList.remove('bg-emerald-600', 'border-emerald-500');
                btn.classList.add('bg-red-600', 'border-red-500');
            }
        }

        setStage(0);

    </script>
</body>
</html>